<Window x:Class="Практическая_работа_1_Писецкий_Полторабатько.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Практическая работа 1" Height="400" Width="600">
    <Grid>
        <Image Name="FunctionImage" Source="screenshot.png" Width="200" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>

        <Label Content="Введите значение x:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,10,0,0"/>
        <TextBox Name="InputTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,30,0,0" Width="100" ToolTip="Введите значение для x"/>

        <Label Content="Результат:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,70,0,0"/>
        <TextBox Name="ResultTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,90,0,0" Width="100" IsReadOnly="True" ToolTip="Результат вычислений"/>

        <RadioButton Name="RadioButtonSh" Content="sh(x)" GroupName="FunctionGroup" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,130,0,0" ToolTip="Гиперболический синус"/>
        <RadioButton Name="RadioButtonX2" Content="x²" GroupName="FunctionGroup" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,150,0,0" ToolTip="Квадрат числа"/>
        <RadioButton Name="RadioButtonEx" Content="e^x" GroupName="FunctionGroup" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,170,0,0" ToolTip="Экспоненциальная функция"/>

        <Button Name="CalculateButton" Content="Вычислить" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,210,0,0" Width="100" Click="CalculateButton_Click" ToolTip="Запустить вычисление"/>
        <Button Name="ClearButton" Content="Очистить" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="330,210,0,0" Width="100" Click="ClearButton_Click" ToolTip="Очистить поля ввода"/>

        <Button Name="ExitButton" Content="Выход" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="440,210,0,0" Width="100" Click="ExitButton_Click" ToolTip="Закрыть приложение"/>
    </Grid>
</Window>